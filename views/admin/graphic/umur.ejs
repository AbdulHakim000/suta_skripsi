    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Chart.js CSS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <style>
        .container {
            margin-top: 20px;
        }
        canvas {
            max-width: 100%;
        }
    </style>
</head>

<body>
    <!-- narkotika -->
    <div style="padding: 50px; display: flex; flex-direction: column; align-items: center;">
        <h1 class="text-center">Grafik Umur Tahanan Narkotika</h1>
        <canvas id="umurChart" width="400" height="180"></canvas>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                // Fetch data from API
                const response = await fetch('/graphic/data-persentase-umur-narkotika');
                const data = await response.json();

                // Prepare data for the chart
                const labels = Object.keys(data);
                const values = Object.values(data);

                // Create chart
                const ctx = document.getElementById('umurChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Jumlah Tahanan Narkotika per Rentang Umur',
                            data: values,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.5)', // pastel red
                                'rgba(54, 162, 235, 0.5)', // pastel blue
                                'rgba(255, 206, 86, 0.5)', // pastel yellow
                                'rgba(75, 192, 192, 0.5)', // pastel teal
                                'rgba(153, 102, 255, 0.5)'  // pastel purple
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)', // pastel red
                                'rgba(54, 162, 235, 1)', // pastel blue
                                'rgba(255, 206, 86, 1)', // pastel yellow
                                'rgba(75, 192, 192, 1)', // pastel teal
                                'rgba(153, 102, 255, 1)'  // pastel purple
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            datalabels: {
                                color: 'black',
                                anchor: 'end',
                                align: 'top',
                                formatter: (value) => value,
                                font: {
                                    weight: 'bold'
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Jumlah'
                                }
                            },
                            x: {
                                title: {
                                    display: true,
                                    text: 'Rentang Umur'
                                }
                            }
                        }
                    },
                    plugins: [ChartDataLabels]
                });
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        });
    </script>


