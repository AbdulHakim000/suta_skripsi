<body>
        
        <div class="container-fluid">
        
            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    <h1>Data Pengajuan</h1>
                </div>
            </div>

        <div class="row mt-2">
            <div class="col-md-12">
                <div class="d-flex justify-content">
                    <a href="/pengajuan/cetak" class="btn btn-info me-2" target="_blank" style="margin-right: 0.1rem;">PDF</a>
                    <a href="/pengajuan/download-excel" class="btn btn-success" style="margin-left: 0.1rem;">Excel</a>
                    <a href="/pengajuan/download-csv" class="btn btn-secondary" target="_blank" style="margin-left: 0.1rem;">CSV</a>
                </div>
            </div>
        </div>
<br>
<h6 style="color:rgb(146, 146, 146)">Fiter</h6>
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            <a href="/pengajuan/admin">
                <button type="button" class="btn btn-outline-primary">All</button>
            </a>
            <a href="/pengajuan/admin/belum-diproses">
                <button type="button" class="btn btn-outline-primary">Belum Diproses</button>
            </a>
            <a href="/pengajuan/admin/diterima">
                <button type="button" class="btn btn-outline-primary">Diterima</button>
            </a>
            <a href="/pengajuan/admin/ditolak">
                <button type="button" class="btn btn-outline-primary">Ditolak</button>
            </a>
        </div>
        

            <div class="row mt-2">
                <div class="col-md-12">

                   <table id="tablepengajuan" class="table table-striped" style="width:100%"> 
                    <thead>
                    <tr>
                        <th>Nomor</th>
                        <th>Nama Pembesuk</th>
                        <th>Registrasi</th>
                        <th>Nama Tahanan</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    
                        <% allPengajuans.forEach((pengajuan, i) => { %>
                         
                            <tr>
                                <td><%= i + 1  %></td>
                                <td><%= pengajuan.nama_pembesuk %></td>
                                <td><%= pengajuan.registrasi_tahanan %></td>
                                <td><%= pengajuan.nama_tahanan  %></td>
                                <td><%= pengajuan.status_pengajuan  %></td>
                                <td>
                                    <a href="/pengajuan/edit/<%= pengajuan.id %>" class="btn btn-warning badge rounded-pill"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <% if (userRole === 'admin') { %>  <!-- Only render delete button for admin -->
                                    <a href="/pengajuan/delete/<%= pengajuan.id %>" onclick="return confirmDelete(event)">
                                        <button class="btn btn-danger badge rounded-pill">
                                            <i class="bi bi-trash"></i> Hapus
                                        </button>
                                    </a>
                                     <% } %>
                                    <a href="/pengajuan/detail/<%= pengajuan.id  %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i>Detail</a> 
                                </td>
                                
                            </tr>
                            <% }) %>
                    </tbody>
                   </table>
                </div>
            </div>
        </div>


 

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function confirmDelete(event) {
    event.preventDefault(); // Prevent default link action

    const id = event.currentTarget.getAttribute('href').split('/').pop(); // Mendapatkan id dari href

    Swal.fire({
        title: "Apakah Kamu Yakin?",
        text: "Data ini akan terhapus selamanya!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Hapus!"
    }).then((result) => {
        if (result.isConfirmed) {
            Swal.fire({
                title: "Terhapus!",
                text: "Data pengajuan Berhasil DiHapus.",
                icon: "success"
            }).then(() => {
                // Redirect to delete URL after confirming
                window.location.href = `/pengajuan/delete/${id}`;
            });
        }
    });

    return false; // Prevent default link action
}
</script>

<script>
    <% if (message && message.type && message.text) { %>
        Swal.fire({
            position: 'center',
            icon: '<%= message.type %>',  // 'success' or 'error'
            title: '<%= message.text %>',
            showConfirmButton: false,
            timer: 2000  // Display for 2 seconds
        });
    <% } %>
</script>

  


