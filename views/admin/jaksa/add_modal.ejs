<div class="container-fluid">
  <a href="/jaksa">
    <button type="button" class="btn btn-outline-danger mt-5">Kembali</button>
  </a>
  <div class="row mt-4 text-center ">
      <div class="md-12 text-center">
          <h1>Tambah Data Jaksa</h1>
      </div>
  </div>
<form action="/jaksa/add" method="POST" enctype="multipart/form-data">

<div class="mb-3 mt-4">
  <label for="nip" class="form-label">NIP</label>
  <input type="text" name="nip" class="form-control" required >
</div>
<div class="mb-3 mt-4">
  <label for="nama" class="form-label">Nama</label>
  <input type="text" name="nama" class="form-control" required >
</div>
<div class="form-group">
  <label for="pangkat" >Pangkat</label>
  <select name="pangkat" class="form-control">
  <option value="-">--Pangkat</option>
  <option value="Jaksa Madya">Jaksa Madya</option>
  <option value="Jaksa Utama Pratama">Jaksa Utama Pratama</option>
  <option value="Jaksa Muda">Jaksa Muda</option>
  <option value="Pratama">Pratama</option>
  </select>
<div class="form-group">
              <label for="gambar_jaksa">Foto Jaksa</label>
              <input type="file" name="gambar_jaksa" accept="image/*" class="form-control" id="gambar_jaksa" required>
            </div>
  <button type="submit" class="btn btn-primary mt-4">Tambah</button>
</div>
</form>
</div>