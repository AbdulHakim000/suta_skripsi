<div class="container">
  <div class="card mx-auto mt-5" style="max-width: 120rem;">
    <div class="card-body">
      <div class="mb-4 ml-6">
        <a href="/lapas">
          <button type="button" class="btn btn-outline-danger">Kembali</button>
        </a>
      </div>
      <div class="row">
        <!-- Image section on the left -->
        <div class="col-md-4 text-center">
          <img src="/images/lapas/<%= lapas.gambar_lapas %>" 
              alt="<%= lapas.nama_lapas %>" 
              style="width: 300px; height: 300px; object-fit: cover; object-position: center; border-radius: 5px;">
        </div>
        <!-- Data section on the right -->
        <div class="col-md-8 ms-4"> <!-- Tambahkan kelas ms-4 untuk memberikan margin start -->
          <h5 class="card-title"><b>Nama Lapas :</b> <%= lapas.nama_lapas %></h5>
          <h5 class="card-title"><b>Alamat :</b> <%= lapas.alamat %></h5>
          <h5 class="card-title"><b>Link Google Maps :</b> <%= lapas.link_maps %></h5>  
        </div>
      </div>
    </div>
  </div>
</div>