// JavaScript untuk dropdown
document.getElementById('graphicDropdown').addEventListener('click', function(event) {
    event.preventDefault(); // Prevent default action
    const dropdownMenu = this.nextElementSibling;
    const navigation = document.querySelector('.navigation');
    
    // Toggle the dropdown visibility
    dropdownMenu.classList.toggle('show');
    
    // Adjust the margin of the last item in the navbar
    if (dropdownMenu.classList.contains('show')) {
        navigation.style.marginBottom = '200px'; // Sesuaikan margin-bottom
    } else {
        navigation.style.marginBottom = '0'; // Atur kembali margin-bottom
    }
    
    // Handle dropdown opacity
    dropdownMenu.style.opacity = dropdownMenu.classList.contains('show') ? '1' : '0';
});

