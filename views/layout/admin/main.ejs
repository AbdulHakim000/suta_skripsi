/* CSS untuk dropdown */
.dropdown-menu {
    display: none;
    position: absolute;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    z-index: 1000;
    min-width: 250px; /* Lebar dropdown yang lebih besar */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    visibility: hidden; /* Hide by default */
    left: 10px; /* Geser dropdown 10px ke kanan */
}
.dropdown-menu a {
    display: block;
    padding: 8px 12px; /* Padding yang lebih kecil */
    font-size: 0.8rem; /* Ukuran font yang lebih kecil */
    line-height: 1.4; /* Jarak antar baris yang lebih kecil */
    color: #333;
    text-decoration: none;
    white-space: nowrap; /* Prevent wrapping */
    overflow: hidden; /* Hide overflow */
    text-overflow: ellipsis; /* Add ellipsis for overflow text */
    border: none; /* Hapus border */
    outline: none; /* Hapus outline */
    box-shadow: none; /* Hapus box-shadow */
     outline-offset: 0; /* Set offset outline ke 0 */
}
.dropdown-toggle::before {
    display: none; /* Hapus ikon segitiga */
}
.dropdown-toggle::after {
    display: none; /* Hapus ikon segitiga */
}
.dropdown-menu a:hover {
    background-color: #f8f9fa;
    border: none; /* Hapus border saat hover */
    outline: none; /* Hapus outline saat hover */
    box-shadow: none; /* Hapus box-shadow saat hover */
}
.dropdown-menu a::before,
.dropdown-menu a::after {
    border: none; /* Hapus border pada pseudo-elements */
    outline: none; /* Hapus outline pada pseudo-elements */
}
.dropdown-menu a:hover {
    background-color: #f8f9fa;
    border: none; /* Hapus border saat hover */
    outline: none; /* Hapus outline saat hover */
}

.dropdown-menu.show {
    display: block;
    opacity: 1;
    visibility: visible; /* Make visible when active */
}

.dropdown-menu a {
    display: block;
    padding: 8px 12px; /* Padding yang lebih kecil */
    font-size: 0.8rem; /* Ukuran font yang lebih kecil */
    line-height: 1.4; /* Jarak antar baris yang lebih kecil */
    color: #333;
    text-decoration: none;
    white-space: nowrap; /* Prevent wrapping */
    overflow: hidden; /* Hide overflow */
    text-overflow: ellipsis; /* Add ellipsis for overflow text */
}

.dropdown-menu a:hover {
    background-color: #f8f9fa;
}
/* Tambahan styling untuk dropdown toggle */
.dropdown {
    position: relative;
}

.dropdown-toggle {
    cursor: pointer;
}

.navigation ul li:last-child {
    margin-bottom: 50px; /* Sesuaikan sesuai kebutuhan */
}
